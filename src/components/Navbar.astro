---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import avatarImage from "../assets/rrcoder0167_avatar.jpeg";
import '@fontsource-variable/jetbrains-mono';
let links = [
  { href: "/", text: "Home" },
  { href: "/projects", text: "Projects" },
  { href: "/contact", text: "Contact" },
  { href: "/awards", text: "Awards" },
  { href: "/blogs", text: "Blogs" },
];

let currentPath = new URL(Astro.request.url).pathname;
---

<style>
  @keyframes shine {
  0% {
    left: -50%;
  }
  100% {
    left: 150%;
  }
}

.user-avatar:hover {
  /* Add animation container */
  &::after {
    content: "";
    background: linear-gradient(
      to right,
      #fff 0%,
      rgba(255, 255, 255, 0.7) 100%
    );
    position: absolute;
    top: 0;
    left: -50%;
    width: 100%;
    height: 100%;
    transform: skewX(-25deg);
    animation: shine 0.85s infinite;
    z-index: 1;
  }
}
.user-avatar {
    /* Existing styles */
    cursor: pointer;
    position: relative;
    border-radius: 50%;
    width: 33px;
    height: 33px;
    overflow: hidden;
  }
</style>

<nav class="bg-surface0 hover:bg-surface1 font-mono relative items-center overflow-hidden px-5 py-2.5 text-center transition-all duration-300 ease-in-out">
  <div class="float-left">
    <div class="flex items-center justify-center transition-transform duration-300 ease-in-out hover:scale-110">
      <div class="user-avatar">
        <Image src={avatarImage} class="mr-2 h-8 w-8 rounded-full object-cover" loading="eager" width="32" height="32" alt="rrcoder0167's avatar" />
      </div>
      <span class="bg-green border-surface0 relative right-3 top-3 z-10 inline-block h-5 w-5 rounded-full border-4" id="discStatus-dot"></span>
    </div>
  </div>
  <div class="absolute left-1/2 top-1/2 float-none m-auto flex -translate-x-1/2 -translate-y-1/2 transform px-4 transition duration-300 ease-in-out">
    {links.map(link => (
      <a 
        href={link.href} 
        class={`px-4 no-underline transition duration-300 ease-in-out hover:cursor-pointer ${currentPath === link.href ? 'text-mauve font-extrabold hover:text-blue hover:font-black' : 'text-subtext0 hover:text-text hover:font-semibold'}`}
      >
        {link.text}
      </a>
    ))}
  </div>
  <div class="absolute float-right text-2xl flex items-center top-1/2 m-auto -translate-y-1/2 right-0 p-6">
    <a href="https://youtube.com/@ridztechtube" class="hover:text-red px-2 transition duration-300 ease-in-out transform hover:scale-110" aria-label="YouTube">
      <Icon name="fa-brands:youtube"></Icon>
    </a>
    <a href="https://discord.com" class="hover:text-lavender px-2 transition duration-300 ease-in-out transform hover:scale-110" aria-label="Discord">
      <Icon name="fa-brands:discord"></Icon>
    </a>
    <a href="https://github.com/rrcoder0167" class="hover:text-green px-2 transition duration-300 ease-in-out transform hover:scale-110" aria-label="GitHub">
      <Icon name="fa-brands:github"></Icon>
    </a>
  </div>
</nav>